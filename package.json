{
  "name": "image-converter",
  "private": true,
  "type": "module",
  "version": "1.0.5",
  "description": "Convert images app",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "icons": "node scripts/generate-icons.js",
    "electron:dev": "concurrently \"npm run dev\" \"electron .\"",
    "electron:build": "npm run icons && npm run build && electron-builder",
    "build:windows": "cross-env DEBUG=electron-builder npm run icons && npm run build && electron-builder --win --x64",
    "build:linux": "cross-env DEBUG=electron-builder npm run icons && npm run build && electron-builder --linux --x64",
    "release:windows": "npm run build:windows -- --publish always",
    "release:linux": "npm run build:linux -- --publish always",
    "release": "npm run release:windows"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yoanmarchal/electron-image-converter.git"
  },
  "author": {
    "name": "Yoan Marchal",
    "email": "marchalyoan@gmail.com"
  },
  "license": "MIT",
  "keywords": [
    "electron",
    "image",
    "converter",
    "app"
  ],
  "dependencies": {
    "@types/mime-types": "^2.1.4",
    "@types/sharp": "^0.31.1",
    "classnames": "^2.5.1",
    "electron-is-dev": "^2.0.0",
    "electron-log": "^5.4.1",
    "electron-store": "^8.1.0",
    "filesize": "^10.1.0",
    "lucide-react": "^0.344.0",
    "mime-types": "^3.0.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-dropzone": "^14.2.3",
    "sharp": "^0.34.2",
    "update-electron-app": "^3.1.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.18",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.2.3",
    "electron-builder": "^24.9.1",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "jimp": "^1.6.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^5.4.2",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "build": {
    "appId": "com.yoanmarchal.imageconverter",
    "productName": "Image Converter",
    "asar": true,
    "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icons/256x256.png"
    },
    "linux": {
      "target": [
        {
          "target": "deb",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "Graphics",
      "icon": "public/logo.svg",
      "maintainer": "Yoan Marchal <marchalyoan@gmail.com>",
      "vendor": "Yoan Marchal",
      "synopsis": "Convert and optimize images easily",
      "description": "A simple and efficient image converter supporting multiple formats including WebP, AVIF, JPEG, and PNG.",
      "desktop": {
        "Name": "Image Converter",
        "Comment": "Convert and optimize images easily",
        "Categories": "Graphics;2DGraphics;RasterGraphics;",
        "MimeType": "image/jpeg;image/png;image/webp;image/avif"
      }
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "!**/*.map"
    ],
    "publish": {
      "provider": "github",
      "owner": "yoanmarchal",
      "repo": "electron-image-converter",
      "releaseType": "draft"
    },
    "directories": {
      "buildResources": "assets",
      "output": "release"
    },
    "protocols": {
      "name": "Image Converter",
      "schemes": [
        "imageconverter"
      ]
    }
  }
}
